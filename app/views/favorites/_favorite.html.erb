<div class="favorite">
  <% if @favorite %>
    <%= link_to "Unfavorite", favorite_path(@favorite), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= form_for Favorite.new do |f| %>
      <%= f.hidden_field :favorable_id, value: favorable.id %>
      <%= f.hidden_field :favorable_type, value: favorable.class %>
      <%= button_tag("Favorite", :class => 'btn btn-primary') %>
    <% end %>
  <% end %>
</div>