<h1>The Jackhuahuas</h1>

<div class="row">
  <div class="col-md-8">
    <% @dogs.each do |dog| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to dog.name, dog %>
          </h4>
          <small>
            <%= dog.description %>
          </small>
        </div>
      </div>
    <% end %>
    <%= will_paginate @dogs %>
  </div>
  <div class="col-md-4">
    <% if policy(Dog.new).create? %>
      <%= link_to "Add a dog", new_dog_path, class: 'btn btn-success' %>
    <% end %>
  </div>
</div>